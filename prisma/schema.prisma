generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @map("_id") @default(cuid())
  studentId String    @unique
  email     String    @unique
  name      String
  picture   String?
  TUCMC     Boolean?  @default(false)
  sessions  Session[]
}

model Group {
  id        String    @id @map("_id") @default(cuid())
  studentId String    @unique
  email     String    @unique
  isAdmin   Boolean   @default(false)
}

model Session {
  id        String    @id @map("_id") @default(cuid())
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}
